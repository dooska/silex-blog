{% extends 'layout.twig' %}

{% block title %}{{  'Articles list'|trans }}{% endblock %}

{% block content %}
    <h1>
        {{ 'Lista artykułów'|trans }}
    </h1>
    <p>
        <a href="{{ url('articles_add') }}" title="{{ 'Add article'|trans }}">
            {{ 'Dodaj artykuł'|trans }}
        </a>
    </p>

    {%  if articles|length > 0 %}

        <div>
            {% if paginator.page > 1 %}
                {% set previous = (paginator.page - 1) %}
                <a href="{{ url('articles_index', {'page': previous}) }}" title="{{ 'previous page'|trans }}">{{ 'previous page'|trans }}</a>
            {%  endif %}

            {% if paginator.page < paginator.pagesCount %}
                {% set next = (paginator.page + 1) %}
                <a href="{{ url('articles_index', {'page': next}) }}" title="{{ 'next page'|trans }}">{{ 'next page'|trans }}</a>
            {% endif  %}
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Tytuł'|trans }}</th>
                <th>{{ 'Zawartość'|trans }}</th>
                <th>{{ 'Id kategorii'|trans }}</th>
                <th colspan="3">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.article_id|e }}</td>
                    <td>{{ article.title|e }}</td>
                    <td>{{ article.content|e }}</td>
                    <td>{{ article.category_id|e }}</td>
                    <td>
                        <a href="{{ url('articles_view', {'id': article.article_id}) }}" title="{{ 'View article'|trans }}">{{ 'Zobacz artykuł'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('articles_edit', {'id': article.article_id}) }}" title="{{ 'Edit article'|trans }}">{{ 'Edytuj artykuł'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('articles_delete', {'id': article.article_id}) }}" title="{{ 'Delete article'|trans }}">{{ 'Usuń artykuł'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-danger" role="alert">
            {{ 'Articles not found'|trans }}.
        </div>
    {% endif %}
{% endblock %}