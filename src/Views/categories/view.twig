{% extends 'layout.twig' %}

{% block content %}
    <div class="row">
        <div class="back-button">
            <a href="{{ url('categories_index') }}" class="btn btn-default">Powrót do listy kategorii</a>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
            {% if category %}
                <h2>Posty w kategorii {{ category.category_name }}</h2>
            {% else %}
                <p>Kategoria nie istnieje</p>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
            {% if category_articles %}
                <table class="table">
                    <thead>
                    <th>Tytuł posta</th>
                    <th>Treść posta</th>
                    <th>Akcja</th>
                    </thead>
                    {% for article in category_articles %}
                        <tr>
                            <td>{{ article.title }}</td>
                            <td>{{ article.content }}</td>
                            <td><a href="{{ url('articles_view', {'id': article.article_id}) }}" class="btn btn-primary">Pokaż</a></td>
                        </tr>
                    {% endfor %}
                </table>

            {% else %}
                <p>Posty w danej kategorii nie istnieją</p>
            {% endif %}
        </div>
    </div>

{% endblock %}