{% block content %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ url('/index') }}">Blog Wojny</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class=""><a href="{{ url('articles_index') }}">{{ 'articles'|trans }} <span class="sr-only">(current)</span></a></li>
                    <li class=""><a href="{{ url('categories_index') }}">{{ 'categories'|trans }} <span class="sr-only">(current)</span></a></li>
                    <li class=""><a href="{{ url('keywords_index') }}">{{ 'keywords'|trans }} <span class="sr-only">(current)</span></a></li>
                    <li class=""><a href="{{ url('register') }}">{{ 'register'|trans }} <span class="sr-only">(current)</span></a></li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="pull-right">
                            <a href="{{ url('auth_logout') }}" title="{{ 'logout'|trans }}">{{ 'logout'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ url('users_view') }}" title="{{ 'user_view'|trans }}">{{ 'user_view'|trans }}</a>
                        </li>
                    {% else %}
                        <li class="pull-right">
                            <a href="{{ url('auth_login') }}" title="{{ 'login'|trans }}">{{ 'login'|trans }}</a>
                        </li>
                    {% endif %}
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
{% endblock %}

