
{% extends 'layout.twig' %}

{% block title %}
    {{ 'user_info'|trans }}
{% endblock %}

{% block content %}

            <table class = "table">
            <thead>
            <tr>
                <th>{{ 'login'|trans }}</th>
                <th>{{ 'email'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ userinfo.login }}</td>
                <td>{{ userinfo.email }}</td>
                <td><a class = "btn btn-danger" href="{{ url('users_delete') }}" role = "button" > {{ 'user_delete'|trans }}</a></td>
            </tr>
            </tbody>
        </table>

{% endblock %}
